<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sgrej.mapper.User_RoleMapper">

    <insert id="insert">
        INSERT INTO `user_role` (`user_id`, `role_id`,`status`) VALUES (#{userId}, #{roleId},#{status});
    </insert>


    <update id="setStatus">
        update user_role set status = #{status} where user_id = #{userId}
    </update>
</mapper>