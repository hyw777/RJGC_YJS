<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sgrej.mapper.TipMapper">

    <insert id="addTip">
        INSERT INTO `niche_tips`
            ( `user_id`, `business_id`, `text`, `date_posted`, `compliment_count`)
        VALUES
            ( #{userId}, #{businessId}, #{text}, #{datePosted}, 0);
    </insert>
</mapper>